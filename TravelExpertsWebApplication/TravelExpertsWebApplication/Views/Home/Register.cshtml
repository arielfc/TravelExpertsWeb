@model TravelExpertsWebApplication.Models.Customers

@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background: white;
    }

    form {
        width: 60%;
        margin: 60px auto;
        background: #f8faff;
        padding: 60px 120px 80px 120px;
        text-align: center;
        -webkit-box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
        box-shadow: 2px 2px 3px rgba(0,0,0,0.1);
    }

    label {
        display: block;
        position: relative;
        margin: 15px 0px;
    }

    .label-txt {
        position: absolute;
        top: -1.6em;
        padding: 10px;
        font-family: sans-serif;
        font-size: .8em;
        letter-spacing: 1px;
        color: rgb(120,120,120);
        transition: ease .3s;
    }

    .input {
        width: 100%;
        padding: 10px;
        background: transparent;
        border: none;
        outline: none;
    }

    .line-box {
        position: relative;
        width: 100%;
        height: 2px;
        background: #BCBCBC;
    }

    .line {
        position: absolute;
        width: 0%;
        height: 2px;
        top: 0px;
        left: 50%;
        transform: translateX(-50%);
        background: #f85959;
        transition: ease .6s;
    }

    .input:focus + .line-box .line {
        width: 100%;
    }

    .label-active {
        top: -3em;
    }

    button {
        display: inline-block;
        padding: 12px 24px;
        background: rgb(220,220,220);
        font-weight: bold;
        color: rgb(120,120,120);
        border: none;
        outline: none;
        border-radius: 3px;
        cursor: pointer;
        transition: ease .3s;
    }

        button:hover {
            background: #f85959;
            color: #ffffff;
        }
</style>

<div class="hero-wrap js-fullheight" style="background-image: url('../images/register.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index.html">Home</a></span> <span>Register</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Register</h1>
            </div>
        </div>
    </div>
</div>

<form asp-action="Create" asp-controller="Customers">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3 class="heading mb-3">Sign up to get started</h3>
    <label asp-for="CustFirstName">
        @*<p class="label-txt">ENTER YOUR FIRST NAME</p>*@
        <input asp-for="CustFirstName" type="text" class="input" placeholder="First Name">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="CustFirstName" class="text-danger"></span>
    </label>
    <label asp-for="CustLastName">
        @*<p class="label-txt">ENTER YOUR LAST NAME</p>*@
        <input asp-for="CustLastName" type="text" class="input" placeholder="Last Name">
