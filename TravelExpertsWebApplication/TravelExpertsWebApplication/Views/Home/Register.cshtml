            <div class="line"></div>
        </div>
        <span asp-validation-for="CustLastName" class="text-danger"></span>
    </label>
    <label asp-for="CustAddress">
        @*<p class="label-txt">ENTER YOUR ADDRESS</p>*@
        <input asp-for="CustAddress" type="text" class="input" placeholder="Address">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="CustAddress" class="text-danger"></span>
    </label>
    <label asp-for="CustCity">
        @*<p class="label-txt">ENTER YOUR CITY</p>*@
        <input asp-for="CustCity" type="text" class="input" placeholder="City">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="CustCity" class="text-danger"></span>
    </label>
    <label asp-for="CustProv">
        @*<p class="label-txt">ENTER YOUR PROVINCE</p>*@
        <input asp-for="CustProv" type="text" class="input" placeholder="Postal Code">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="CustProv" class="text-danger"></span>
    </label>
    <label asp-for="CustPostal">
        @*<p class="label-txt">ENTER YOUR POSTAL CODE</p>*@
        <input asp-for="CustPostal" type="text" class="input" placeholder="Province">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="CustPostal" class="text-danger"></span>
    </label>
    @*<label asp-for="CustCountry">
            <p class="label-txt">ENTER YOUR POSTAL CODE</p>
            <input asp-for="CustCountry" type="text" class="input" placeholder="Country">
            <div class="line-box">
                <div class="line"></div>
            </div>
            <span asp-validation-for="CustCountry" class="text-danger"></span>
        </label>*@
    <label asp-for="CustHomePhone">
        @*<p class="label-txt">ENTER YOUR PHONE NUMBER</p>*@
        <input asp-for="CustHomePhone" type="text" class="input" placeholder="Phone Number">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="CustHomePhone" class="text-danger"></span>
    </label>
    <label asp-for="CustEmail">
        @*<p class="label-txt">ENTER YOUR PHONE NUMBER</p>*@
        <input asp-for="CustEmail" type="text" class="input" placeholder="Email Address">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="CustEmail" class="text-danger"></span>
    </label>
    <label asp-for="PasswordNotHashed">
        @*<p class="label-txt">ENTER YOUR PASSWORD</p>*@
        <input asp-for="PasswordNotHashed" type="password" class="input" placeholder="Password">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="PasswordNotHashed" class="text-danger"></span>
    </label>
    @*<label asp-for="ConfirmPassword">
        <input asp-for="ConfirmPassword" type="text" class="input" placeholder="Confirm Password">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </label>*@
    <button type="submit" value="Create">Sign Up</button>
</form>

<script>
    $(document).ready(function () {

        $('.input').focus(function () {
            $(this).parent().find(".label-txt").addClass('label-active');
        });

        $(".input").focusout(function () {
            if ($(this).val() == '') {
                $(this).parent().find(".label-txt").removeClass('label-active');
            };
        });

    });
</script>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

