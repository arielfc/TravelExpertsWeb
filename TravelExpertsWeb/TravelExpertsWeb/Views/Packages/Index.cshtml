@model IEnumerable<TravelExpertsWeb.Models.Packages>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Package Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End date
            </th>
            <th>
                Details
            </th>
            <th>
                Price
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PkgName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgStartDate, "DateTimeTemplate")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgEndDate, "DateTimeTemplate")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PkgDesc)
            </td>
            <td>
                @{
                    decimal bp, ac;
                    bp = Convert.ToDecimal(item.PkgBasePrice);
                    ac = Convert.ToDecimal(item.PkgAgencyCommission); 

                    decimal price = bp + ac;
                }
                @price.ToString("c")
            </td>
           
            <td>
                <a asp-controller="CBDModels"
                    asp-action="Order" asp-route-id="@item.PackageId">Order</a>
            </td>
        </tr>
}
    </tbody>
</table>
